<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".Place_items" >

    <ImageView
        android:id="@+id/viewImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_launcher" />
    <TextView
        android:id="@+id/viewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/viewImage"
        android:text="@string/name" />
    
     <TextView
        android:id="@+id/viewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewName"
        android:layout_toRightOf="@id/viewImage"
        android:text="@string/address" />
     <TextView 
         android:id = "@+id/viewSummary"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below ="@id/viewAddress"
         android:layout_toRightOf="@id/viewImage"
         android:text = "@string/summary" />
      <TextView 
         android:id = "@+id/viewRate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below ="@id/viewSummary"
         android:layout_toRightOf="@id/viewImage"
         android:text = "@string/summary" />
</RelativeLayout>
